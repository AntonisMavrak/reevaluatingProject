@model IEnumerable<ADOPSEV1._1.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table overflow-auto" style="max-height: 500px;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDateTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td class="float-end">
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                                Edit
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                                Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>