@model IEnumerable<ADOPSEV1._1.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Admin panel</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row pt-5 pb-2">
    <div class="col-12">
        <div class="adminCards overflow-auto">
            <table class="table">
                <thead>
                    <tr>
                        <td scope="col"><h4>Όνομα</h4></td>
                        <td scope="col"><h4>Επώνυμο</h4></td>
                        <td scope="col"><h4>Email</h4></td>
                        <td scope="col"><h4>Παράρτημα</h4></td>
                        <td scope="col"><h4>Ρόλος</h4></td>
                        <td scope="col"><h4>Επιβεβαιωμένος</h4></td>
                        <td scope="col"></td>
                    </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model) {
                <tr>
                    <td scope="col">@obj.first_name</td>
                    <td scope="col">@obj.last_name</td>
                    <td scope="col">@obj.email</td>
                    <td scope="col">@obj.branchId</td>
                    <td scope="col">@obj.role</td>
                    <td scope="col">@Html.DisplayNameFor(model => model.validated)</td>
                    <td scope="col">
                    <a asp-action="Edit" asp-route-id="@obj.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@obj.id">Delete</a>
                    </td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row justify-content-center pt-4">
    <div class="col-10 col-md-4">
        <div class="adminCards">
            <table class="table">
                <thead>
                    <tr>
                        <td scope="col"><h4>Συνολικά εγγεγραμμένοι χρήστες</h4></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="col">
                            @ViewBag.TotalUsers
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-10 col-md-6">
        <div class="adminCards">
            <table class="table">
                <thead>
                    <tr>
                        <td scope="col">
                            <h4>Αντιστοιχία χρηστών σε ρόλους</h4>
                        </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="col">
                            <h5>Καθηγητές</h5> 
                        </td>
                        <td scope="col">
                            <h5>Μαθητές</h5>
                        </td>
                    </tr>
                    <tr>
                        <td scope="col">@ViewBag.teachers</td>
                        <td scope="col">@ViewBag.students</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .adminCards{
        border: 1px solid black;
        border-radius: 20px;
        padding: 12px;
        background-color: #c1c1c1;
        box-shadow: 3px 3px 6px #0000008f;
    }
</style>

