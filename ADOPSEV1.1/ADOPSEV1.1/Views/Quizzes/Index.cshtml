@model IEnumerable<ADOPSEV1._1.Models.Quiz>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Create" class="btn btn-primary">Create Quiz</a>
<a asp-action="Index" asp-controller="Questions" class="btn btn-secondary">Questions</a>

<table class="table overflow-auto style="max-height: 600px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.minutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfQuestions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.madeBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @foreach (Subject subject in ViewBag.Subject)
                    {
                        if (item.subjectId == subject.id)
                        {
                            @subject.name
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.minutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfQuestions)
                </td>


                @foreach (User users in ViewBag.Users)
                {
                    if (item.madeBy == users.id)
                    {
                        <td>@users.first_name @users.last_name</td>
                    }
                }
                
                <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td class="float-end">
                        <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                                Edit
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                                Delete
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>
